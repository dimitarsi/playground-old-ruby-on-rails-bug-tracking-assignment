<%= form_for(@user) do |f| %>
  
  <%= f.label :name, 'Потребителско име' %>
  <%= f.text_field :name %> <br />
  
  <%= f.label :password, 'Парола' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, ' ' %>
  <%= f.password_field :password_confirmation %>
  
  <br />
  
  <%= f.submit %>
  
<% end %>